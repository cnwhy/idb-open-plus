{
  "name": "idb-open-plush",
  "version": "1.0.0",
  "description": "Open indexedDb to get the Database you need",
  "main": "lib/idb-open-plush.cjs.js",
  "browser": "dist/idb-open-plush.umd.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "npm run build:vite",
    "build:rollup": "tsc && rollup -c --bundleConfigAsCjs",
    "build:vite": "tsc && vite build",
    "clean": "rimraf lib dist",
    "demo": "node ./script/puppeteer ./demo",
    "prebuild": "npm run clean",
    "test": "node ./script/test.js",
    "test:speed": "node ./script/puppeteer ./test/speedTest",
    "coverage": "npm test -- --coverage --noOpen",
    "coverage:auto": "npm test -- --coverage",
    "test-server": "vite ./test --port 3300",
    "prepack": "npm test && npm run build"
  },
  "keywords": [
    "indexedDB",
    "idb",
    "IDBDatabase"
  ],
  "author": "cnwhy",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "idb": "^7.1.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "open": "^8.4.2",
    "puppeteer": "20.7.0",
    "puppeteer-to-istanbul": "^1.4.0",
    "rimraf": "^2.6.3",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^1.10.0",
    "typescript": "^5.0.4",
    "v8-to-istanbul": "^9.1.0",
    "vite": "^4.3.5"
  }
}
